doctype html
html(xmlns='http://www.w3.org/1999/xhtml', xmlns:o='urn:schemas-microsoft-com:office:office', xmlns:v='urn:schemas-microsoft-com:vml')
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Invitation Email
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@500;700&display=swap")
        style(type='text/css').
            body, table, td, a {
                -webkit-text-size-adjust: 100%;
                -ms-text-size-adjust: 100%;
            }

            table, td {
                mso-table-rspace: 0pt;
                mso-table-lspace: 0pt;
            }

            img {
                -ms-interpolation-mode: bicubic;
            }

            a[x-apple-data-detectors] {
                font-family: inherit;
                font-size: inherit;
                font-weight: inherit;
                line-height: inherit;
                text-decoration: none;
            }

            html, body {
                margin: 0;
                padding: 0;
                height: 100%;
                width: 100%;
                background-color: transparent;
            }

            body {
                background-color: #141A1F;
                font-family: 'DM Sans', sans-serif;
                color: white;
                display: flex;
                justify-content: center;
                align-items: flex-start;
                padding: 40px 0;
            }
            .outer-container {
                width: fit-content;
                margin: auto;
                max-width: 1097px;
                display: block;
                padding: 24px;
                background-color: transparent;
            }

            .container {
                width: fit-content;
                max-width: 452px;
                height: auto;
                padding: 24px;
                background-color: #323F4B;
                border-radius: 6px;
                border: 1px solid #52606D;
                text-align: center;
                box-sizing: border-box;
            }

            .logo {
                width: 70px;
                height: 33px;
                margin-bottom: 30px;
            }

            .header, .message {
                width: 100%;
                margin: 0 auto 24px auto;
                text-align: center;
                box-sizing: border-box;
            }

            .header {
                font-family: 'DM Sans', sans-serif;
                font-size: 24px;
                font-weight: 700;
                line-height: 28.8px;
                color: #FFFFFF;
            }

            .message {
                font-family: 'DM Sans', sans-serif;
                font-size: 16px;
                font-weight: 500;
                line-height: 24px;
                color: #CBD2D9;
            }

            .button {
                display: inline-block;
                width: auto;
                min-width: 166px;
                height: 48px;
                line-height: 48px;
                padding: 0 16px;
                font-family: 'DM Sans', sans-serif;
                font-size: 16px;
                font-weight: 700;
                text-align: center;
                color: #1F2933;
                background-color: #F7A892;
                border: none;
                border-radius: 6px;
                text-decoration: none;
                box-sizing: border-box;
            }
            table td {
                text-align: left !important;
                vertical-align: top;
            }
            table td h1, table td p {
                text-align: left !important;
                margin: 23px 0;
            }
            @media only screen and (max-width: 660px) and (min-width: 480px) and (-ms-high-contrast: none), (-ms-high-contrast: active) {
                .outer-container {
                    padding: 0;
                }
            }

            @media (max-width: 660px) {
                html {
                    background-color: transparent;
                }

                body {
                    background-position: center center;
                    background-repeat: no-repeat;
                    background-size: cover;
                    padding-top: 0;
                    background-color: transparent;
                }

                .outer-container {
                    width: fit-content;
                    margin: auto;
                    display: block;
                    padding: 20px;
                }

                .logo {
                    margin-bottom: 20px;
                }

                .header, .message, .button {
                    width: auto;
                    max-width: 100%;
                    margin: 0 0 24px 0;
                }

                .button {
                    display: block;
                    width: 100%;
                    margin-top: 10px;
                }
            }
    

    body
        table.nl-container(bgcolor='#141A1F', cellpadding='0', cellspacing='0', role='presentation', style='table-layout: fixed; vertical-align: top; min-width: 320px; Margin: 0 auto; border-spacing: 0; border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace: 0pt; background-color: #141A1F; width: 100%;', valign='top', width='100%')
            tbody
                tr(style='vertical-align: top;width: 100%;', valign='top')
                    td(style='word-break: break-word; vertical-align: top;width: 100%;', valign='top')
                        div(style='padding: 0 45px;')
                             h1(style='font-weight:700; font-size: 24px;') Payment Invoice
                        div(style='padding: 0 45px;')
                          table(bgcolor='#141A1F', cellpadding='0', cellspacing='0', role='presentation', style='table-layout: fixed; vertical-align: top; min-width: 320px; Margin: 0 auto; border-spacing: 0; border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace: 0pt; background-color: #141A1F; width: 100%;', valign='top', width='100%')
                            tbody
                                tr(style='border-bottom: 1px solid #52606D; height: 99px;')
                                  td
                                    h1(style='font-weight:700; font-size: 16px;') Full Name
                                  td
                                    p(style='font-weight:500; font-size: 16px;') #{full_name}

                                tr(style='border-bottom: 1px solid #52606D; height: 99px;')
                                  td
                                    h1(style='font-weight:700; font-size: 16px;') Email address
                                  td
                                    p(style='font-weight:500; font-size: 16px;') #{email_address}

                                tr(style='border-bottom: 1px solid #52606D; height: 99px;')
                                  td
                                    h1(style='font-weight:700; font-size: 16px;') Plan
                                  td
                                    h1(style='font-weight:500; font-size: 16px;') #{plan}

                                tr(style='border-bottom: 1px solid #52606D; height: 99px;')
                                  td
                                    h1(style='font-weight:700; font-size: 16px;') Number of Sessions
                                  td
                                    h1(style='font-weight:500; font-size: 16px;') #{number_of_sessions}

                                tr(style='border-bottom: 1px solid #52606D; height: 99px;')
                                  td
                                    h1(style='font-weight:700; font-size: 16px;') Price
                                  td
                                    h1(style='font-weight:500; font-size: 16px;') $#{price}

                                tr(style='border-bottom: 1px solid #52606D; height: 99px;')
                                  td
                                    h1(style='font-weight:700; font-size: 16px;') Payment Method
                                  td
                                    p(style='font-weight:500; font-size: 16px;text-transform: capitalize;') #{payment_method}
                                tr
                                  td(colspan='2')
                                    <a href="#{url}" style="text-decoration: none; cursor: pointer;">
                                        button(style='padding: 8px 16px; border-radius: 8px; background-color: #F9B19A; color: #191D27; border: none; height: 48px; font-weight: 700;margin-top: 52px; font-size: 16px; cursor: pointer;') Pay Now
                                    </a>

                                   

