{
  "extends": "@synthetixio/synpress-tsconfig/base.json",
  "compilerOptions": {
    "target": "es5",
    "rootDir": ".",
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false, // Allows for `undefined` in `playwright.config.ts`
    "types": ["cypress"],
    "sourceMap": false
  },
  "include": ["cypress.config.ts", "**/*.ts"]
}
